<!--pages/home/home.wxml-->
<text class="title">Hello World</text>
<button size="mini">按钮</button>

<!-- text 长按 文本被选中 -->
<text selectable>\n你好啊天使~\n</text>
<text space="nbsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="emsp">Hello World\n</text>

<text decode>5 &gt; 3</text>

<!-- 1.数据绑定  -->
<view>Hello {{username}}</view>
<view>年龄：{{age}}</view>
<!-- 2.列表展示 wx:for -->
<view wx:for="{{students}}">{{item.name}} - {{item.age}}</view>
<!-- 3.事件监听 改变data -->
<view>当前计数：{{counter}}</view>
<button size="mini" bindtap="addBtnClick">+</button>
<button size="mini" bindtap="subBtnClick">-</button>

